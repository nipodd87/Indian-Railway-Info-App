<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/pnrStatusTxt"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/pnrStatusEditTxt"
        android:text="Enter PNR"/>
    <EditText
        android:id="@+id/pnrStatusEditTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="10"
        android:ems="10"
        android:maxEms="10"
        android:singleLine="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/pnrStatusTxt"
        android:inputType="number"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"/>
    <Button
        android:id="@+id/pnrStatusbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pnrStatusCheck"
        android:text="Get PNR Status"
        android:layout_below="@+id/pnrStatusEditTxt"
        android:layout_alignLeft="@+id/pnrStatusEditTxt"
        android:layout_alignStart="@+id/pnrStatusEditTxt"
        android:layout_marginTop="10dp"/>
</RelativeLayout>